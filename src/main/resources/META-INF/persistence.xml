<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="ordersPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entidades -->
        <class>cl.ucn.pipefilter.model.Order</class>
        <class>cl.ucn.pipefilter.model.OrderItem</class>

        <properties>
            <!-- SQLite -->
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:ordenes.db"/>

            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>

            <!-- Log SQL -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>

            <!-- Crear esquema en cada arranque (desde las entidades) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
